<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">
    <!-- Suppress logback internal status messages -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>

    <!-- Define properties -->
    <property name="LOG_HOME" value="${user.home}/.jobmatch/logs"/>
    <property name="LOG_LEVEL" value="${JOBMATCH_LOG_LEVEL:-INFO}"/>
    <property name="CONSOLE_LEVEL" value="${JOBMATCH_DEBUG:-false}"/>

    <!-- Console Appender - Minimal output for CLI (WARN and above only) -->
    <appender name="CONSOLE" class="ch.qos.logback.core.ConsoleAppender">
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>WARN</level>
        </filter>
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%-5level] %logger{20} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Main Log File with Rolling -->
    <appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/jobmatch.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/jobmatch.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>7</maxHistory>
            <totalSizeCap>100MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%thread] %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Error Log File (errors only) -->
    <appender name="ERROR_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/jobmatch-error.log</file>
        <filter class="ch.qos.logback.classic.filter.ThresholdFilter">
            <level>ERROR</level>
        </filter>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/jobmatch-error.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>10MB</maxFileSize>
            <maxHistory>30</maxHistory>
            <totalSizeCap>50MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} [%-5level] [%thread] %logger{36} - %msg%n%ex</pattern>
        </encoder>
    </appender>

    <!-- LLM Request/Response Log -->
    <appender name="LLM_FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <file>${LOG_HOME}/llm-requests.log</file>
        <rollingPolicy class="ch.qos.logback.core.rolling.SizeAndTimeBasedRollingPolicy">
            <fileNamePattern>${LOG_HOME}/llm-requests.%d{yyyy-MM-dd}.%i.log.gz</fileNamePattern>
            <maxFileSize>50MB</maxFileSize>
            <maxHistory>3</maxHistory>
            <totalSizeCap>200MB</totalSizeCap>
        </rollingPolicy>
        <encoder>
            <pattern>%d{yyyy-MM-dd HH:mm:ss.SSS} - %msg%n</pattern>
        </encoder>
    </appender>

    <!-- Root Logger -->
    <root level="${LOG_LEVEL}">
        <appender-ref ref="CONSOLE"/>
        <appender-ref ref="FILE"/>
        <appender-ref ref="ERROR_FILE"/>
    </root>

    <!-- Application loggers -->
    <logger name="com.jobmatch" level="DEBUG"/>
    <logger name="com.jobmatch.llm" level="INFO" additivity="true">
        <appender-ref ref="LLM_FILE"/>
    </logger>

    <!-- Third-party loggers - suppress verbose output -->
    <logger name="okhttp3" level="WARN"/>
    <logger name="com.fasterxml.jackson" level="WARN"/>
    <logger name="org.yaml.snakeyaml" level="WARN"/>
</configuration>
